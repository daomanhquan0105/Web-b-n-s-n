@using TongkhosonVn.Models
@{
    var config = (ConfigSite)HttpContext.Current.Application["ConfigSite"];
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <meta name="description" content="@ViewBag.Description" />
    <meta name="robots" content="index,follow" />
    <link rel="shortcut icon" href="~/favicon.ico">
    <link rel="canonical" href="@Request.Url">
    <meta property="og:locale" content="en_US">
    <meta property="og:type" content="website">
    <meta property="og:title" content="@ViewBag.Title">
    <meta property="og:description" content="@ViewBag.Description">
    <meta property="og:url" content="@Request.Url">
    <meta property="og:site_name" content="Sen Beautique">
    <meta property="og:image" content="@ViewBag.ImageThumb">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@100;300;400;500;700;900&display=swap" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @if (config.HeaderCode != null)
    {
        @Html.Raw(config.HeaderCode)
    }
</head>
<body>
    @Html.Action("HeaderPartial", "Home")
    @RenderBody()
    @Html.Action("FooterPartial", "Home")

    @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval", "~/bundles/bootstrap")
    @RenderSection("scripts", false)
    @if (config.FooterCode != null)
    {
        @Html.Raw(config.FooterCode)
    }
</body>
</html>
