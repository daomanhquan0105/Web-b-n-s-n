@using TongkhosonVn.ViewModel;
@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1">
    <title>Đăng nhập hệ thống quản trị website</title>
    <style type="text/css">
        body {
            font: normal 14px Arial, sans-serif;
            background: #eee;
        }

        a {
            color: #2072b2;
        }

        .form_control {
            background: url(/Content/admin/form_control_bg.gif) repeat-x top left white;
            border: 1px #CCC solid;
            font-size: 15px;
            font-weight: normal;
            outline: none;
            padding: 5px;
            width: 290px;
        }

        table td {
            padding: 5px 0;
        }

        button {
            padding: 5px;
        }

        .field-validation-error {
            color: #f00;
        }

        .field-validation-valid {
            display: none;
        }

        .input-validation-error {
            border: 1px solid #f00 !important;
            background-color: #fee;
        }

        .validation-summary-errors {
            font-weight: bold;
            color: #f00;
        }

        .validation-summary-valid {
            display: none;
        }
    </style>
</head>
<body>
    <div style="min-width: 300px; max-width: 450px; margin: auto; margin-top: 100px; box-shadow: 0 0 5px #333; padding: 20px 0 30px; background: #fff;">
        @using (Html.BeginForm())
        {
            <table style="width: 100%;">
                <tr>
                    <td colspan="2" style="text-align: center">
                        <img src="~/Content/admin/lock.png" alt="Đăng nhập" /><br />
                        Vui lòng nhập username và password đăng nhập.
                    </td>
                </tr>
                <tr>
                    <td colspan="2">@Html.ValidationSummary(true)</td>
                </tr>
                <tr>
                    <td style="text-align: right; width: 110px; padding-right: 10px">Tên đăng nhập</td>
                    <td>
                        @Html.TextBoxFor(modelItem => modelItem.UserName, new { @class = "form_control" })<br />
                        @Html.ValidationMessageFor(modelItem => modelItem.UserName)
                    </td>
                </tr>
                <tr>
                    <td style="text-align: right; padding-right: 10px">Mật khẩu</td>
                    <td> 
                        @Html.PasswordFor(model=>model.PassWord, new { @class = "form_control" })
                        @Html.ValidationMessageFor(modelItem => modelItem.PassWord)
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td>
                        <button type="submit">Đăng nhập</button>
                        <a href="#">Quên mật khẩu?</a>
                    </td>
                </tr>
            </table>
        }
    </div>
    @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval")
    
</body>
</html>
