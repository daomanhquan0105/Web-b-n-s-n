@using TongkhosonVn.Models;
@model Contact

@{
    ViewBag.Title = "Thông tin liên hệ";
    var config = (ConfigSite)HttpContext.Current.Application["ConfigSite"];
}

<div class="container">
    <ul class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="@Url.Action("Index", "Home")" class="mb-2"><i class="fas fa-home"></i></a>
        </li>
        <li class="breadcrumb-item active">Liên hệ</li>
    </ul>
    <div class="row py-lg-5 py-3">
        <div class="col-12 col-lg-6">
            <div class="box-name">Thông tin liên hệ</div>
            <div class="body-content mt-lg-4 mt-3">
                @Html.Raw(config.Contact)
            </div>
        </div>
        <div class="col-12 col-lg-6">
            @if (ViewBag.Result == 1)
            {
                <div class="alert alert-success">Cảm ơn bạn đã gửi thông tin. Chúng tôi sẽ liên hệ lại trong thời gian sớm nhất.</div>
            }
            <form action="@Url.Action("ContactView")" method="post" id="formData">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group row">
                    @Html.LabelFor(model => model.FullName, htmlAttributes: new {@class = "col-form-label col-md-4"})
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.FullName)
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Email, htmlAttributes: new {@class = "col-form-label col-md-4"})
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Email)
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new {@class = "col-form-label col-md-4"})
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.PhoneNumber)
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Subject, htmlAttributes: new {@class = "col-form-label col-md-4"})
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Subject)
                    </div>
                </div>
                <div class="form-group row">
                    @Html.LabelFor(model => model.Content, htmlAttributes: new {@class = "col-form-label col-md-4"})
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Content)
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-lg-8 offset-lg-4">
                        <button type="submit" class="btn btn-success">Gửi liên hệ</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>